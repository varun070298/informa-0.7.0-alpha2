      <includes>
        <include>**/Test*.java</include>
        <!-- include>de/nava/informa/test/AllTests.java</include -->
      </includes>
      <excludes>
        <!-- exclude>de/nava/informa/impl/hibernate/*.java</exclude -->
        <!-- exclude>de/nava/informa/utils/manager/hibernate/*.java</exclude -->
        <exclude>**/TestAbstract*.java</exclude>
      </excludes>
    </unitTest>

    <!-- Resources that are needed by java classes resp. tests -->
    <resources>
      <resource>
        <directory>config</directory>
        <includes>
          <include>*.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>src</directory>
        <includes>
          <include>**/*.hbm.xml</include>
        </includes>
      </resource>
    </resources>

  </build>

